<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="GridPane" xmlns="http://javafx.com/javafx/8.0.121"
         xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Panel Główny">
                    <content>
                        <GridPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox alignment="CENTER" prefWidth="481.0" spacing="10.0">
                                    <children>
                                        <Label text="User has successfully logged in. This is temporary message."/>
                                        <Label text="In this tab headmaster will be able to logout, see his messages from teachers etc."/>
                                        <Label text="Dyrektor w tym okienku będzie widział jakie szkoły może zarządzać"/>
                                        <Button mnemonicParsing="false" onAction="#logout" text="Wyloguj"/>
                                    </children>
                                </VBox>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Dziennik">
                    <content>
                        <GridPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox alignment="CENTER" prefWidth="481.0" spacing="10.0">
                                    <children>
                                        <Label text="Dyrektor będzie mógł wpisywać oceny uczniom, prace domowe, uwagi etc. po wcześniejszym wyborze klasy"/>
                                        <Label text="oraz przeglądać wszystkie klasy, tworzyć je etc."/>
                                    </children>
                                </VBox>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Kalendarz">
                    <content>
                        <GridPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox alignment="CENTER" prefWidth="481.0" spacing="10.0">
                                    <children>
                                        <Label text="Kalendarz, w którym będą wyświetlane prace domowe, zapowiedziane kartkówki, klasówki etc."/>
                                    </children>
                                </VBox>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Opcje">
                    <content>
                        <GridPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox alignment="CENTER" prefWidth="481.0" spacing="10.0">
                                    <children>
                                        <Label text="Opcje."/>
                                    </children>
                                </VBox>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</fx:root>
